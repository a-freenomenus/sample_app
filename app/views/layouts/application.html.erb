<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'shared/stylesheets' %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div class="container">
      <%= render 'shared/header' %>
      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"> <%= value %> </div>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'shared/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>

  </body>
</html>

